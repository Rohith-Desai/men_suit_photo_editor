<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="25dp"
            android:padding="20dp"
            android:background="@drawable/gradient_help_second_back"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/gradient_help_back_design"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:src="@drawable/spect_new"
                        android:layout_height="80dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/cap_new"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:src="@drawable/earring_new"
                        android:layout_height="80dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tie_new"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>




        <ImageView
            android:layout_width="290dp"
            android:visibility="gone"
            android:layout_height="390dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men Accessories"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans"
            android:textColor="@color/others_btn_back"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Change you accessories based on dress selection"
            android:textAlignment="center"
            android:textColor="@color/others_btn_back"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>