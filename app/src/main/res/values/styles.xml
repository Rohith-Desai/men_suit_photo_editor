<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0560b5</item>
        <item name="colorPrimaryDark">#0560b5</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0560b5</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
    </style>

     <style name="btn_custom_style">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="canvas_text_toolbar_button_style">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <dimen name="lib_footer_button_padding">10dp</dimen>
    <dimen name="lib_button_style_min_width">80dp</dimen>
    <dimen name="lib_button_style_min_height">47dp</dimen>
    <dimen name="collage_context_button_style_min_width">50dp</dimen>

    <style name="mirror_ratio_button_style">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_collage_ratio_button</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="mirror_button_style">
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@color/primary</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_width">50.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="mirror_footer_imagebutton_style">
        <item name="android:textSize">@dimen/text_size_very_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/demo_img</item>
        <item name="android:paddingTop">@dimen/padding_extra_normal</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="effect_footer_imagebutton_style">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/black</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:minHeight">@dimen/collage_context_button_style_min_width</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="effect_header_button_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="collage_footer_imagebutton_style">
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
       <!-- <item name="android:padding">20dp</item>-->
       <!-- <item name="android:gravity">center</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:minWidth">@dimen/_50sdp</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="collage_footer_context_imagebutton_style">
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/slow_motion</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
       <!-- <item name="android:paddingBottom">@dimen/padding_small</item>-->
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="collage_ratio_button_style">
        <item name="android:textSize">@dimen/collage_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_collage_ratio_button</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">@dimen/collage_ratio_button_width</item>
        <item name="android:layout_height">@dimen/collage_ratio_button_height</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="gallery_tool_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="effect_seek_bar_style">
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:paddingRight">18.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12.0dip</item>
        <item name="android:progress">50</item>
        <item name="android:minHeight">12.0dip</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="head_text" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="sub_head_text" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black1</item>

    </style>
    <style name="sub_head_text_highlight" >
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/c1</item>
    </style>

</resources>
